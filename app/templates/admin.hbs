<div class="container">
  <div class="row">
    <div class="col s6 offset-s4">
      <h1>Admin</h1>
      {{article-form saveArticle="saveArticle"}}
    </div>
  </div>

  {{#each model as |article|}}
    <div class="row">
      <div class="col s6 offset-s4">
        {{edit-article article=article update="update"}}
        <br>
        <button {{action 'destroyArticle' article}} class="btn red">Delete</button>
    </div>
    </div>
  {{/each}}
</div>
