<div class="container">
  <div class="col s12 m7">
    {{#link-to 'article' article.id}}<h2 class="header">{{article.title}}</h2>{{/link-to}}
    <div class="card horizontal">
      <div class="card-image">
        {{#link-to 'article' article.id}}<img class="circle" src={{article.image}}>{{/link-to}}
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p>{{article.text}}</p>
        </div>
        <div class="card-action">
          <a href="#">By: {{article.author}}</a>
        </div>
      </div>
    </div>
  </div>
</div>
