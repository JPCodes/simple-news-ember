{{#if showArticleUpdateForm}}
  <h4>Update {{article.title}} by {{article.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=article.title}}
      </div>

      <div class="form-group">
        <label for="text">Text</label>
        {{textarea value=text class="materialize-textarea" id="text" placeholder=article.text}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=article.author}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>

      <button class="btn" {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
    <h5>{{article.title}} by {{article.author}}</h5><br>
    <button class="btn" {{action 'showUpdateArticle'}}>Update</button>
{{/if}}
